<p style="color: green"><%= notice %></p>

<div class="container cover bg-light rounded p-4">
  <div class="container d-flex justify-content-between align-items-center">
    <h1>Posts</h1>
    <%= link_to "New post", new_post_path, class: "btn btn-outline-warning" %>
  </div>
  
  <div class="row">
    
      <% @posts.each do |post| %>
        <div class="col-md-4 my-2">
          <div class="post bg-secondary text-light py-2 px-4 rounded ">
            <%= render post %>
            <p>
              <%= link_to "Show this post", post, class: "btn btn-outline-primary py-0 mt-2" %>
            </p>
          </div>
        </div>
      <% end %>
    
  </div>

</div>
<style>
  .cover {
    box-shadow: 1px 1px 5px gray
  }
</style>