<div class="comment-<%= comment.id %> container rounded"
    style="box-shadow: 1px 1px 5px black; padding: 1em; margin: 1em;">
    <%= comment.user.email %> <br>
    <span>Posted <%= time_ago_in_words(comment.created_at) %></span>
    <% if current_user == comment.user %>
        <div class="btn-group float-end">
            <%= button_to "Delete", [post, comment],class: "btn btn-danger py-1 ", method: :delete %>
        </div>
    <% end %>
    <hr>
    <%= comment.body %>

</div>